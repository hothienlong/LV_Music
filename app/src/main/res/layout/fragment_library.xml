<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Thư viện"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_next_black"/>
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/linearlayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/bg_ripple_effect"
                android:id="@+id/libLayoutUpload"
                android:padding="10dp"
                android:layout_width="115dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imgUpload"
                    android:src="@drawable/ic_upload"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_below="@+id/imgUpload"
                    android:text="Upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/bg_ripple_effect"
                android:id="@+id/libLayoutMv"
                android:padding="10dp"
                android:layout_width="115dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imgMv"
                    android:src="@drawable/ic_musicvideo"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_below="@+id/imgMv"
                    android:text="MV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@color/white"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/bg_ripple_effect"
                android:id="@+id/libLayoutSinger"
                android:padding="10dp"
                android:layout_width="115dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imgSinger"
                    android:src="@drawable/ic_singer"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_below="@+id/imgSinger"
                    android:text="Nghệ sĩ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>