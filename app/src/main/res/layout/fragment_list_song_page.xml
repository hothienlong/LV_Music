<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingHorizontal="5dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvThanhTimKiem"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Thanh tìm kiếm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:id="@+id/btnRandom"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_random"
            android:layout_marginTop="10dp"
            android:text="Phát ngẫu nhiên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

    <fragment
        android:tag="listsongpage"
        android:name="com.example.lv_music.Fragment.ListSongFragment"
        android:id="@+id/fragmentListSong"
        android:layout_below="@id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fragment>


</RelativeLayout>